<% layout("/layouts/boilerplate.ejs") -%>

 <div class="row mt-3">
    <h1 class=" col-6 offset-3"> Signup on Wanderlust</h1>
     <div class="col-6 offset-3">
         <form action="/signup" method="POST" class=" needs-validation " novalidate>
            <div class="mb-3">
                <lebel for="username" class="form-lebel">Username</lebel>
                <input name="username" 
                 type="text" 
                 id="username"
                class="form-control"
                required 
                 />
                  <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="mb-3">
                <lebel for="email" class="form-lebel">Email</lebel>
                <input name="email" 
                 type="email" 
                 id="email"
                class="form-control"
                required 
                 />
                  
              </div>
              <div class="mb-3">
                <lebel for="password" class="form-lebel">Password</lebel>
                <input name="password" 
                 type="password" 
                 id="password"
                class="form-control"
                required 
                 />
                  
              </div>
               <button class=" btn btn-success">Signup </button>
              


         </form>
         
     </div>
 </div>