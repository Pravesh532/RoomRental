    <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
     </div>
</div>
    
 
</div>

    
     <div class="row row-cols-lg-4 rwo-cols-md-3 row-cols-sm-2 mt-1">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col  listing-card" >
          <img src=" <%= listing.image.url%> " class="card-img-top" style=" height: 20rem;"alt="listings_image">
          <div class="card-img-overlay">ROA</div> 
          <div class="card-body">
            <p class="card-text">
             <b> <%= listing.title %></b>  <br/>
              &#8377; <%= listing.price %>/Night
              <i class="tax-info">&nbsp; +18GSt </i>
    
             </p>
          </div>
        </div>
      </a>
        <% } %>
     </div>
   

